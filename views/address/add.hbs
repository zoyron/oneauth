<div class="row no-gutters work-area">
  {{> side-nav}}
  <div class="col-9 py-5 work-area__main-area">
    <div class="mb-4 row">
      <div class="col-md-6">
        <div class="tab-nav-underline w-100 justify-content-start">
          <div class="tab active px-0 font-md extra-bold">Addresses</div>
        </div>
      </div>
    </div>

    <form action="/api/address" method="POST">
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <input type="hidden" name="returnTo" id="redirect-input" value="{{returnTo}}" />

      {{> error-snippet}}

      <div class="my-4 row align-items-center">
        <div class="col-2">
          <label for="addtype" class="font-sm">Label</label>
        </div>
        <div class="col-4">
          <input type="text" name="label" class="underline-input pb-3 font-sm bold w-100" placeholder="HOME | OFFICE | OTHER">
        </div>
      </div>

      <div class="my-4 divider-h"></div>

      <div class="row">
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">First Name</label>
            </div>
            <div class="col-8">
              <input type="text" name="first_name" class="underline-input pb-3 font-sm bold w-100"
                placeholder="First Name">
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">Last Name</label>
            </div>
            <div class="col-8">
              <input type="text" name="last_name" class="underline-input pb-3 font-sm bold w-100"
                placeholder="Last Name">
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">Mobile</label>
            </div>
            <div class="col-8">
              <input type="text" name="number" class="underline-input pb-3 font-sm bold w-100"
                placeholder="Mobile Number">
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">Email</label>
            </div>
            <div class="col-8">
              <input type="text" name="email" class="underline-input pb-3 font-sm bold w-100"
                placeholder="E-Mail">
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">Address</label>
            </div>
            <div class="col-8">
              <input type="text" name="street_address" class="underline-input pb-3 font-sm bold w-100"
                placeholder="Address">
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">Landmark</label>
            </div>
            <div class="col-8">
              <input type="text" name="landmark" class="underline-input pb-3 font-sm bold w-100"
                placeholder="Landmark">
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">Pincode</label>
            </div>
            <div class="col-8">
              <input type="text" name="pincode" class="underline-input pb-3 font-sm bold w-100"
                placeholder="Pincode">
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">City</label>
            </div>
            <div class="col-8">
              <input type="text" name="city" class="underline-input pb-3 font-sm bold w-100"
                placeholder="City">
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">State</label>
            </div>
            <div class="col-8 select">
              <select name="stateId" class="font-sm bold underline-select" required>
                {{#each states}}
                  <option class="py-2" value="{{id}}" {{#selected}}selected="selected"{{/selected}}>{{name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">Country</label>
            </div>
            <div class="col-8 select">
              <select name="countryId" class="font-sm bold underline-select" required>
                {{#each countries}}
                  <option class="py-2" value="{{id}}" {{#selected}}selected="selected"{{/selected}}>{{name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">Country Code</label>
            </div>
            <div class="col-8 select">
              <select name="dial_code" class="font-sm bold underline-select" required>
                {{#each countries}}
                  <option class="py-2" value="{{dial_code}}" {{#selected}}selected="selected"{{/selected}}>
                    {{name}} ({{dial_code}})
                  </option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="my-4 row align-items-center">
            <div class="col-4">
              <label for="addtype" class="font-sm">Whatsapp No.</label>
            </div>
            <div class="col-8">
              <input type="text" name="whatsapp_number" class="underline-input pb-3 font-sm bold w-100"
                placeholder="Whatsapp No.">
            </div>
          </div>
        </div>
      </div>
      <button class="button-solid" type="submit">Save Changes</button>
      <button class="font-sm ml-3 dark-grey" type="reset">Reset</button>
    </form>
  </div>
</div>
